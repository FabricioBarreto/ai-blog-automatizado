---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

// Obtener los √∫ltimos 3 posts de forma segura
let posts = [];
try {
	const allPosts = await getCollection('blog');
	if (allPosts && allPosts.length > 0) {
		posts = allPosts
			.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
			.slice(0, 3);
	}
} catch (error) {
	console.log('‚ÑπÔ∏è No hay posts disponibles a√∫n');
}

const hasPosts = posts.length > 0;
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			:root {
				--gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				--gradient-secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
				--gradient-accent: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
				--shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
				--shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
			}

			/* Hero Section - M√°s impactante */
			.hero {
				position: relative;
				text-align: center;
				padding: 5rem 2rem;
				background: var(--gradient-primary);
				border-radius: 24px;
				margin-bottom: 4rem;
				overflow: hidden;
			}
			
			.hero::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
				opacity: 0.3;
			}

			.hero-content {
				position: relative;
				z-index: 1;
			}

			.hero h1 {
				font-size: 3.5rem;
				margin-bottom: 1.5rem;
				color: white;
				font-weight: 800;
				line-height: 1.2;
				text-shadow: 0 2px 10px rgba(0,0,0,0.2);
			}

			.hero-subtitle {
				font-size: 1.4rem;
				color: rgba(255, 255, 255, 0.95);
				max-width: 700px;
				margin: 0 auto 2rem;
				line-height: 1.6;
			}

			.hero-cta {
				display: inline-flex;
				gap: 1rem;
				flex-wrap: wrap;
				justify-content: center;
			}

			.btn-primary, .btn-secondary {
				padding: 1rem 2.5rem;
				border-radius: 50px;
				font-weight: 700;
				text-decoration: none;
				transition: all 0.3s ease;
				font-size: 1.1rem;
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				box-shadow: var(--shadow-xl);
			}

			.btn-primary {
				background: white;
				color: #667eea;
			}

			.btn-primary:hover {
				transform: translateY(-2px);
				box-shadow: var(--shadow-2xl);
			}

			.btn-secondary {
				background: rgba(255, 255, 255, 0.2);
				color: white;
				backdrop-filter: blur(10px);
				border: 2px solid rgba(255, 255, 255, 0.3);
			}

			.btn-secondary:hover {
				background: rgba(255, 255, 255, 0.3);
				transform: translateY(-2px);
			}

			/* Newsletter Section */
			.newsletter {
				background: var(--gradient-accent);
				padding: 3rem 2rem;
				border-radius: 20px;
				margin: 3rem 0;
				text-align: center;
				box-shadow: var(--shadow-xl);
			}

			.newsletter h2 {
				color: white;
				font-size: 2rem;
				margin-bottom: 1rem;
				font-weight: 700;
			}

			.newsletter p {
				color: rgba(255, 255, 255, 0.9);
				font-size: 1.1rem;
				margin-bottom: 2rem;
				max-width: 600px;
				margin-left: auto;
				margin-right: auto;
			}

			.newsletter-form {
				display: flex;
				gap: 1rem;
				max-width: 500px;
				margin: 0 auto;
				flex-wrap: wrap;
			}

			.newsletter-form input {
				flex: 1;
				padding: 1rem 1.5rem;
				border: none;
				border-radius: 50px;
				font-size: 1rem;
				min-width: 250px;
			}

			.newsletter-form button {
				padding: 1rem 2rem;
				background: white;
				color: #4facfe;
				border: none;
				border-radius: 50px;
				font-weight: 700;
				cursor: pointer;
				transition: all 0.3s ease;
				font-size: 1rem;
			}

			.newsletter-form button:hover {
				transform: translateY(-2px);
				box-shadow: var(--shadow-xl);
			}

			/* Stats Section */
			.stats {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 2rem;
				margin: 3rem 0;
			}

			.stat-card {
				text-align: center;
				padding: 2rem;
				background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
				border-radius: 16px;
				border: 2px solid rgba(102, 126, 234, 0.2);
				transition: all 0.3s ease;
			}

			.stat-card:hover {
				transform: translateY(-5px);
				border-color: rgba(102, 126, 234, 0.4);
			}

			.stat-number {
				font-size: 3rem;
				font-weight: 800;
				background: var(--gradient-primary);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				margin-bottom: 0.5rem;
			}

			.stat-label {
				color: rgb(var(--gray-dark));
				font-weight: 600;
				font-size: 1rem;
			}

			/* Featured Section */
			.featured {
				margin: 4rem 0;
			}

			.section-header {
				text-align: center;
				margin-bottom: 3rem;
			}

			.section-title {
				font-size: 2.5rem;
				margin-bottom: 1rem;
				font-weight: 800;
				background: var(--gradient-primary);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.section-subtitle {
				color: rgb(var(--gray));
				font-size: 1.2rem;
			}

			/* Posts Grid */
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
				gap: 2.5rem;
				list-style: none;
				padding: 0;
			}

			.post-card {
				border-radius: 20px;
				overflow: hidden;
				transition: all 0.3s ease;
				background: white;
				box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
				position: relative;
			}

			.post-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: var(--gradient-primary);
				opacity: 0;
				transition: opacity 0.3s ease;
				z-index: 0;
			}

			.post-card:hover {
				transform: translateY(-10px);
				box-shadow: var(--shadow-2xl);
			}

			.post-card:hover::before {
				opacity: 0.05;
			}

			.post-card a {
				text-decoration: none;
				color: inherit;
				display: block;
				position: relative;
				z-index: 1;
			}

			.post-image-wrapper {
				position: relative;
				overflow: hidden;
				height: 220px;
			}

			.post-card img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.5s ease;
			}

			.post-card:hover img {
				transform: scale(1.1);
			}

			.post-badge {
				position: absolute;
				top: 1rem;
				right: 1rem;
				background: rgba(255, 255, 255, 0.95);
				backdrop-filter: blur(10px);
				padding: 0.5rem 1rem;
				border-radius: 50px;
				font-size: 0.85rem;
				font-weight: 700;
				color: #667eea;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}

			.no-image {
				width: 100%;
				height: 220px;
				background: var(--gradient-primary);
				display: flex;
				align-items: center;
				justify-content: center;
				color: white;
				font-size: 4rem;
			}

			.post-content {
				padding: 2rem;
			}

			.post-content h3 {
				margin: 0 0 1rem 0;
				color: rgb(var(--black));
				font-size: 1.4rem;
				font-weight: 700;
				line-height: 1.3;
			}

			.post-content p {
				margin: 0 0 1.5rem 0;
				color: rgb(var(--gray));
				font-size: 0.95rem;
				line-height: 1.6;
			}

			.post-tags {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
			}

			.tag {
				background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
				color: #667eea;
				padding: 0.4rem 1rem;
				border-radius: 50px;
				font-size: 0.85rem;
				font-weight: 600;
				border: 1px solid rgba(102, 126, 234, 0.2);
			}

			/* CTA Section */
			.cta-section {
				text-align: center;
				margin: 4rem 0;
				padding: 3rem 2rem;
				background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
				border-radius: 20px;
			}

			.cta-section h2 {
				font-size: 2rem;
				margin-bottom: 1rem;
				color: rgb(var(--black));
			}

			.cta-section p {
				color: rgb(var(--gray));
				font-size: 1.1rem;
				margin-bottom: 2rem;
			}

			/* Empty State */
			.empty-state {
				text-align: center;
				padding: 4rem 2rem;
				background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
				border-radius: 20px;
			}

			.empty-state-icon {
				font-size: 5rem;
				margin-bottom: 1.5rem;
				opacity: 0.7;
			}

			.empty-state h3 {
				font-size: 2rem;
				margin-bottom: 1rem;
				color: rgb(var(--black));
				font-weight: 700;
			}

			.empty-state p {
				font-size: 1.1rem;
				color: rgb(var(--gray));
				max-width: 500px;
				margin: 0 auto 2rem;
				line-height: 1.6;
			}

			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.5rem;
				}
				.hero-subtitle {
					font-size: 1.1rem;
				}
				.posts-grid {
					grid-template-columns: 1fr;
				}
				.newsletter-form {
					flex-direction: column;
				}
				.newsletter-form input {
					min-width: 100%;
				}
				.stats {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-content">
					<h1>üöÄ Domina las Herramientas de IA</h1>
					<p class="hero-subtitle">
						Descubre reviews honestas, tutoriales pr√°cticos y comparativas profundas 
						de las mejores herramientas de IA para impulsar tu productividad en 2025
					</p>
					<div class="hero-cta">
						<a href="/blog/" class="btn-primary">
							Explorar Art√≠culos ‚Üí
						</a>
						<a href="#newsletter" class="btn-secondary">
							‚úâÔ∏è Newsletter Gratis
						</a>
					</div>
				</div>
			</section>

			<!-- Stats Section -->
			<section class="stats">
				<div class="stat-card">
					<div class="stat-number">50+</div>
					<div class="stat-label">Herramientas Revisadas</div>
				</div>
				<div class="stat-card">
					<div class="stat-number">100%</div>
					<div class="stat-label">Contenido con IA</div>
				</div>
				<div class="stat-card">
					<div class="stat-number">24/7</div>
					<div class="stat-label">Actualizaci√≥n Continua</div>
				</div>
			</section>

			<!-- Featured Posts -->
			<section class="featured">
				<div class="section-header">
					<h2 class="section-title">üìö Art√≠culos Destacados</h2>
					<p class="section-subtitle">Las mejores gu√≠as para maximizar tu productividad con IA</p>
				</div>
				
				{hasPosts ? (
					<ul class="posts-grid">
						{posts.map((post, index) => (
							<li>
								<div class="post-card">
									<a href={`/blog/${post.id}/`}>
										<div class="post-image-wrapper">
											{post.data.heroImage ? (
												<>
													<img 
														src={post.data.heroImage} 
														alt={post.data.title}
														loading="lazy"
													/>
													{index === 0 && <span class="post-badge">üî• Trending</span>}
												</>
											) : (
												<div class="no-image">üìù</div>
											)}
										</div>
										<div class="post-content">
											<h3>{post.data.title}</h3>
											<p>{post.data.description}</p>
											{post.data.tags && post.data.tags.length > 0 && (
												<div class="post-tags">
													{post.data.tags.slice(0, 3).map((tag: string) => (
														<span class="tag">#{tag}</span>
													))}
												</div>
											)}
										</div>
									</a>
								</div>
							</li>
						))}
					</ul>
				) : (
					<div class="empty-state">
						<div class="empty-state-icon">üöÄ</div>
						<h3>Contenido en Preparaci√≥n</h3>
						<p>
							Estamos generando art√≠culos incre√≠bles con IA. Suscr√≠bete abajo para 
							ser el primero en recibir nuestras gu√≠as y reviews exclusivas.
						</p>
					</div>
				)}
			</section>

			{hasPosts && (
				<section class="cta-section">
					<h2>¬øListo para m√°s contenido?</h2>
					<p>Explora nuestra biblioteca completa de gu√≠as y tutoriales</p>
					<a href="/blog/" class="btn-primary">
						Ver Todos los Art√≠culos ‚Üí
					</a>
				</section>
			)}

			<!-- Newsletter Section -->
			<section class="newsletter" id="newsletter">
				<h2>üì¨ Newsletter Semanal de IA</h2>
				<p>
					Recibe las √∫ltimas novedades, reviews y tutoriales directamente en tu inbox. 
					Sin spam, solo contenido de valor.
				</p>
				<form class="newsletter-form" action="#" method="post">
					<input 
						type="email" 
						placeholder="tu@email.com" 
						required
						name="email"
					/>
					<button type="submit">Suscribirme Gratis</button>
				</form>
				<p style="font-size: 0.9rem; margin-top: 1rem; opacity: 0.8;">
					√önete a 1,000+ profesionales que ya reciben nuestras updates
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>