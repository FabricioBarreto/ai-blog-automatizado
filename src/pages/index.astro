			.cta-section {
				text-align: center;
				margin: 5rem 0;
				padding: 4rem 2rem;
				background: white;
				border-radius: 24px;
				box-shadow: var(--shadow-lg);
			}

			@media (max-width: 768px) {
				.hero {
					padding: 4rem 1.5rem 3rem;
					margin-bottom: 3rem;
				}

				.stats {
					grid-template-columns: 1fr;
					margin: -2rem auto 3rem;
				}

				.posts-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}

				.newsletter-form {
					flex-direction: column;
				}

				.newsletter-form input {
					min-width: 100%;
				}

				.steps {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
