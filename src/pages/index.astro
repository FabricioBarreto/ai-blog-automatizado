---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

// Obtener posts destacados
let featuredPosts: CollectionEntry<'blog'>[] = [];
try {
	const allPosts = await getCollection('blog');
	if (allPosts && allPosts.length > 0) {
		// Ordenar por fecha y tomar los 6 m√°s recientes
		featuredPosts = allPosts
			.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
			.slice(0, 6);
	}
} catch (error) {
	console.log('‚ÑπÔ∏è No hay posts disponibles a√∫n');
}

const hasPosts = featuredPosts.length > 0;
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			:root {
				--gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				--gradient-accent: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
				--shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
				--shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
				--shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
				--shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
			}

			/* Animaciones */
