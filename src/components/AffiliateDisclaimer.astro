<style>
  .affiliate-disclaimer {
    display: flex;
    gap: 20px;
    padding: 24px;
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-left: 4px solid #f59e0b;
    border-radius: 12px;
    margin: 32px 0;
    box-shadow: 0 4px 15px rgba(245, 158, 11, 0.2);
  }
  
  .affiliate-disclaimer.top {
    margin-top: 0;
    margin-bottom: 32px;
  }
  
  .disclaimer-icon {
    flex-shrink: 0;
    color: #f59e0b;
  }
  
  .disclaimer-icon svg {
    width: 32px;
    height: 32px;
  }
  
  .disclaimer-content {
    flex: 1;
  }
  
  .disclaimer-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #92400e;
    margin: 0 0 8px 0;
  }
  
  .disclaimer-text {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #78350f;
    margin: 0;
  }
  
  .disclaimer-text strong {
    color: #92400e;
  }
  
  .disclaimer-link {
    color: #d97706;
    font-weight: 600;
    text-decoration: underline;
    transition: color 0.3s ease;
  }
  
  .disclaimer-link:hover {
    color: #b45309;
  }
  
  @media (max-width: 640px) {
    .affiliate-disclaimer {
      flex-direction: column;
      gap: 12px;
      padding: 20px;
    }
    
    .disclaimer-icon svg {
      width: 24px;
      height: 24px;
    }
    
    .disclaimer-title {
      font-size: 1rem;
    }
    
    .disclaimer-text {
      font-size: 0.9rem;
    }
  }
</style>