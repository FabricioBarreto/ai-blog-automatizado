---
import { AFFILIATE_TAG } from '../consts';

interface Props {
  productName: string;
  amazonUrl: string;
  price?: string;
  rating?: number;
  image?: string;
  description?: string;
  buttonText?: string;
  ctaStyle?: 'primary' | 'secondary' | 'minimal';
}

const {
  productName,
  amazonUrl,
  price,
  rating,
  image,
  description,
  buttonText = 'Ver en Amazon',
  ctaStyle = 'primary'
} = Astro.props;

const affiliateTag = AFFILIATE_TAG;

// âœ… Single source of truth: SIEMPRE agregar tag acÃ¡ (y scripts sin tag)
const finalUrl = amazonUrl.includes('tag=')
  ? amazonUrl
  : `${amazonUrl}${amazonUrl.includes('?') ? '&' : '?'}tag=${affiliateTag}`;

const buttonStyles = {
  primary: 'bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white shadow-lg hover:shadow-xl',
  secondary: 'bg-gray-800 hover:bg-gray-900 text-white border-2 border-orange-500',
  minimal: 'bg-transparent border-2 border-orange-500 text-orange-500 hover:bg-orange-50'
};

const safeLabel = productName.replaceAll('"', "'");
---

<div class="amazon-affiliate-card bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 p-6 border border-gray-200 dark:border-gray-700">
  <div class="flex flex-col md:flex-row gap-6">
    {image && (
      <div class="md:w-1/3 flex-shrink-0">
        <img
          src={image}
          alt={productName}
          class="w-full h-48 object-contain rounded-lg bg-gray-50 dark:bg-gray-900 p-4"
          loading="lazy"
        />
      </div>
    )}

    <div class="flex-1 flex flex-col justify-between">
      <div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
          {productName}
        </h3>

        {rating && (
          <div class="flex items-center gap-2 mb-3">
            <div class="flex">
              {[...Array(5)].map((_, i) => (
                <svg
                  class={`w-5 h-5 ${i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300'}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              {rating.toFixed(1)} estrellas
            </span>
          </div>
        )}

        {description && (
          <p class="text-gray-600 dark:text-gray-300 mb-4 text-sm leading-relaxed">
            {description}
          </p>
        )}

        {price && (
          <div class="mb-4">
            <span class="text-2xl font-bold text-orange-600 dark:text-orange-400">
              {price}
            </span>
            <span class="text-sm text-gray-500 ml-2">en Amazon</span>
          </div>
        )}
      </div>

      <div class="flex items-center gap-4 mt-4">
        <a
          href={finalUrl}
          target="_blank"
          rel="nofollow noopener noreferrer sponsored"
          data-affiliate="amazon"
          data-product={productName}
          onClick={`window.gtag?.('event','affiliate_click',{event_category:'monetization', event_label:"${safeLabel}", destination:'amazon'})`}
          class={`inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold transition-all duration-200 ${buttonStyles[ctaStyle]} flex-1 md:flex-initial`}
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
          </svg>
          {buttonText}
        </a>

        <span class="text-xs text-gray-400 hidden md:block">
          ðŸ”— Link de afiliado
        </span>
      </div>
    </div>
  </div>
</div>

<style>
  .amazon-affiliate-card {
    background: linear-gradient(135deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0) 100%);
  }
  .dark .amazon-affiliate-card {
    background: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0) 100%);
  }
</style>
