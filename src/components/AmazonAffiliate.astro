---
interface Props {
  productName: string;
  amazonUrl: string;
  price: string;
  rating: number;
  description: string;
  features?: string[]; // Nuevo: características clave
  imageUrl?: string; // Nuevo: imagen del producto
}

const {
  productName,
  amazonUrl,
  price,
  rating,
  description,
  features = [],
  imageUrl,
} = Astro.props;

const stars = '⭐'.repeat(Math.floor(rating));
---

<div class="amazon-product">
  {imageUrl && (
    <div class="product-image">
      <img src={imageUrl} alt={productName} loading="lazy" />
    </div>
  )}
  
  <div class="product-info">
    <div class="product-header">
      <h3>{productName}</h3>
      <div class="product-meta">
        <span class="rating">{stars} {rating}/5</span>
        <span class="price">{price}</span>
      </div>
    </div>
    
    <p class="description">{description}</p>
    
    {features.length > 0 && (
      <ul class="features">
        {features.map((feature) => (
          <li>✓ {feature}</li>
        ))}
      </ul>
    )}
    
    <a
      href={amazonUrl}
      class="amazon-cta"
      target="_blank"
      rel="nofollow noopener sponsored"
      data-product={productName}
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M3 3h18l-2 13H5L3 3z"></path>
        <circle cx="9" cy="21" r="1"></circle>
        <circle cx="18" cy="21" r="1"></circle>
      </svg>
      Ver en Amazon
    </a>
    
    <small class="affiliate-note">
      Como Asociado de Amazon, ganamos por compras elegibles
    </small>
  </div>
</div>

<style>
  .amazon-product {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 1.5rem;
    background: white;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    padding: 1.5rem;
    margin: 2rem 0;
    transition: all 0.3s ease;
  }

  .amazon-product:hover {
    border-color: #667eea;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
  }

  .product-image {
    border-radius: 8px;
    overflow: hidden;
    background: #f8fafc;
  }

  .product-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .product-info {
    display: flex;
    flex-direction: column;
  }

  .product-header h3 {
    margin: 0 0 0.75rem;
    font-size: 1.25rem;
    color: #1e293b;
  }

  .product-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .rating {
    font-size: 0.95rem;
    color: #64748b;
  }

  .price {
    font-size: 1.5rem;
    font-weight: 800;
    color: #667eea;
  }

  .description {
    margin: 0 0 1rem;
    color: #64748b;
    line-height: 1.6;
  }

  .features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
  }

  .features li {
    padding: 0.5rem 0;
    color: #475569;
    border-bottom: 1px solid #f1f5f9;
  }

  .features li:last-child {
    border-bottom: none;
  }

  .amazon-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    background: linear-gradient(135deg, #ff9900 0%, #ff7700 100%);
    color: white;
    font-weight: 700;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
    margin-bottom: 0.75rem;
  }

  .amazon-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 153, 0, 0.4);
  }

  .affiliate-note {
    display: block;
    font-size: 0.8rem;
    color: #94a3b8;
    text-align: center;
  }

  @media (max-width: 768px) {
    .amazon-product {
      grid-template-columns: 1fr;
    }

    .product-image {
      max-width: 200px;
      margin: 0 auto;
    }
  }
</style>

<script>
  // Track clicks en Amazon
  document.querySelectorAll('.amazon-cta').forEach((link) => {
    link.addEventListener('click', (e) => {
      const productName = (e.currentTarget as HTMLElement).dataset.product;
      
      if (window.gtag) {
        window.gtag('event', 'amazon_click', {
          event_category: 'affiliate',
          event_label: productName,
        });
      }
    });
  });
</script>