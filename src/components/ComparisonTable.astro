---
import { AFFILIATE_TAG } from '../consts';

interface Product {
  name: string;
  image: string;
  rating: number;
  price: string;
  pros: string[];
  cons: string[];
  bestFor: string;
  amazonUrl: string;
  isBestChoice?: boolean;
}

interface Props {
  title: string;
  products: Product[];
}

const { title, products } = Astro.props;
const affiliateTag = AFFILIATE_TAG;

function addAffiliateTag(url: string): string {
  return url.includes('tag=')
    ? url
    : `${url}${url.includes('?') ? '&' : '?'}tag=${affiliateTag}`;
}
---

<div class="comparison-section my-12">
  <h2 class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white">
    {title}
  </h2>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {products.map((product) => {
      const safeLabel = product.name.replaceAll('"', "'");
      return (
        <div class={`product-card bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden border-2 transition-all hover:shadow-2xl hover:scale-105 ${product.isBestChoice ? 'border-orange-500 ring-4 ring-orange-200' : 'border-gray-200 dark:border-gray-700'}`}>
          {product.isBestChoice && (
            <div class="bg-gradient-to-r from-orange-500 to-orange-600 text-white text-center py-2 font-bold text-sm">
              ‚≠ê MEJOR OPCI√ìN
            </div>
          )}

          <div class="p-6">
            <div class="relative mb-4">
              <img
                src={product.image}
                alt={product.name}
                class="w-full h-48 object-contain bg-gray-50 dark:bg-gray-900 rounded-lg p-4"
                loading="lazy"
              />
            </div>

            <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">
              {product.name}
            </h3>

            <div class="flex items-center gap-2 mb-3">
              <div class="flex">
                {[...Array(5)].map((_, i) => (
                  <svg
                    class={`w-4 h-4 ${i < Math.floor(product.rating) ? 'text-yellow-400' : 'text-gray-300'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <span class="text-sm text-gray-600 dark:text-gray-400">
                {product.rating}
              </span>
            </div>

            <div class="mb-4">
              <span class="text-3xl font-bold text-orange-600 dark:text-orange-400">
                {product.price}
              </span>
            </div>

            <div class="mb-4 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
              <p class="text-sm font-semibold text-blue-800 dark:text-blue-300">
                üéØ Ideal para: {product.bestFor}
              </p>
            </div>

            <div class="mb-4">
              <h4 class="font-semibold text-green-600 dark:text-green-400 mb-2 flex items-center">
                <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Ventajas
              </h4>
              <ul class="text-sm text-gray-700 dark:text-gray-300 space-y-1">
                {product.pros.map((pro) => (
                  <li class="flex items-start">
                    <span class="text-green-500 mr-2">‚úì</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="mb-6">
              <h4 class="font-semibold text-red-600 dark:text-red-400 mb-2 flex items-center">
                <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                Desventajas
              </h4>
              <ul class="text-sm text-gray-700 dark:text-gray-300 space-y-1">
                {product.cons.map((con) => (
                  <li class="flex items-start">
                    <span class="text-red-500 mr-2">‚úó</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a
              href={addAffiliateTag(product.amazonUrl)}
              target="_blank"
              rel="nofollow noopener noreferrer sponsored"
              onClick={`window.gtag?.('event','affiliate_click',{event_category:'monetization', event_label:"${safeLabel}", destination:'amazon'})`}
              class={`block w-full text-center py-3 px-6 rounded-lg font-bold transition-all duration-200 ${product.isBestChoice ? 'bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white shadow-lg hover:shadow-xl' : 'bg-gray-800 hover:bg-gray-900 text-white'}`}
            >
              Ver en Amazon ‚Üí
            </a>
          </div>
        </div>
      );
    })}
  </div>

  <div class="mt-8 p-4 bg-gray-50 dark:bg-gray-900 rounded-lg text-center">
    <p class="text-sm text-gray-600 dark:text-gray-400">
      ‚ÑπÔ∏è Los precios pueden variar.
    </p>
  </div>
</div>

<style>
  .product-card { transition: transform 0.3s ease, box-shadow 0.3s ease; }
  .product-card:hover { transform: translateY(-8px); }
</style>
