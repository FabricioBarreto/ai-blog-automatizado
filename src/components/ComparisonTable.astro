---
interface Product {
  name: string;
  rating: number;
  price: string;
  bestFor: string;
  pros: string[];
  cons: string[];
  amazonUrl: string;
  imageUrl?: string;
}

interface Props {
  products: Product[];
  title?: string;
}

const { products, title = "Comparativa" } = Astro.props;
---

<div class="comparison-section">
  <h2 class="comparison-title">{title}</h2>
  
  <div class="comparison-grid">
    {products.map((product, index) => (
      <div class="product-card">
        {index === 0 && (
          <div class="best-badge">‚≠ê Mejor opci√≥n</div>
        )}
        
        {product.imageUrl && (
          <div class="card-image">
            <img src={product.imageUrl} alt={product.name} loading="lazy" />
          </div>
        )}
        
        <div class="card-content">
          <h3>{product.name}</h3>
          
          <div class="card-meta">
            <span class="rating">
              {'‚≠ê'.repeat(Math.floor(product.rating))} {product.rating}
            </span>
            <span class="price">{product.price}</span>
          </div>
          
          <div class="best-for">
            üí° Ideal para: {product.bestFor}
          </div>
          
          <div class="pros-cons">
            <div class="pros">
              <strong>‚úÖ Pros</strong>
              <ul>
                {product.pros.map((pro) => <li>{pro}</li>)}
              </ul>
            </div>
            
            <div class="cons">
              <strong>‚ùå Contras</strong>
              <ul>
                {product.cons.map((con) => <li>{con}</li>)}
              </ul>
            </div>
          </div>
          
          <a
            href={product.amazonUrl}
            class="view-button"
            target="_blank"
            rel="nofollow noopener sponsored"
          >
            Ver en Amazon ‚Üí
          </a>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .comparison-section {
    margin: 3rem 0;
  }

  .comparison-title {
    font-size: 1.75rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 2.5rem;
    color: #1e293b;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .product-card {
    background: white;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    border-color: #667eea;
  }

  .best-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    z-index: 10;
    box-shadow: 0 2px 10px rgba(251, 191, 36, 0.4);
  }

  .card-image {
    height: 180px;
    background: #f8fafc;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-content h3 {
    font-size: 1.15rem;
    margin: 0 0 1rem;
    color: #1e293b;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .rating {
    font-size: 0.9rem;
    color: #64748b;
  }

  .price {
    font-size: 1.4rem;
    font-weight: 800;
    color: #667eea;
  }

  .best-for {
    background: #f1f5f9;
    padding: 0.75rem;
    border-radius: 8px;
    font-size: 0.9rem;
    color: #475569;
    margin-bottom: 1rem;
  }

  .pros-cons {
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  .pros, .cons {
    margin-bottom: 1rem;
  }

  .pros strong {
    color: #059669;
  }

  .cons strong {
    color: #dc2626;
  }

  .pros-cons ul {
    margin: 0.5rem 0 0;
    padding-left: 1.25rem;
  }

  .pros-cons li {
    line-height: 1.6;
    color: #64748b;
  }

  .view-button {
    display: block;
    text-align: center;
    padding: 0.875rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-weight: 700;
    border-radius: 8px;
    text-decoration: none;
    transition: transform 0.2s;
  }

  .view-button:hover {
    transform: scale(1.03);
  }

  @media (max-width: 768px) {
    .comparison-grid {
      grid-template-columns: 1fr;
    }
  }
</style>