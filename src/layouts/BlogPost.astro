---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, category, tags = [] } = Astro.props;
---

<html lang="es-AR">
  <head>
    <BaseHead 
      title={title}
      description={description}
      image={heroImage}
      type="article"
      pubDate={pubDate.toISOString()}
      tags={tags}
    />
  </head>
  <body>
    <Header />
    <main>
      <article>
        <!-- Breadcrumbs para SEO -->
        <div class="container">
          <Breadcrumbs currentPage={title} />
        </div>

        <!-- Hero Image -->
        {heroImage && (
          <div class="hero-image">
            <img 
              src={heroImage} 
              alt={title}
              loading="eager"
              width="1920"
              height="1080"
            />
          </div>
        )}

        <!-- Article Header -->
        <div class="container">
          <header class="article-header">
            {category && (
              <span class="category-badge">{category}</span>
            )}
            <h1>{title}</h1>
            <div class="article-meta">
              <FormattedDate date={pubDate} />
              {updatedDate && (
                <span class="updated">
                  Actualizado: <FormattedDate date={updatedDate} />
                </span>
              )}
            </div>
            {tags.length > 0 && (
              <div class="tags">
                {tags.map((tag: string) => (
                  <a href={`/blog?tag=${tag}`} class="tag">
                    #{tag}
                  </a>
                ))}
              </div>
            )}
          </header>

          <!-- Article Content -->
          <div class="prose">
            <slot />
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .container {
    max-width: 768px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .article-header {
    margin-bottom: 3rem;
  }

  .category-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #0066cc;
    color: white;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 1rem 0;
    font-weight: 700;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    color: #666;
    font-size: 0.9375rem;
    margin: 1rem 0;
  }

  .updated {
    font-style: italic;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    color: #0066cc;
    text-decoration: none;
    font-size: 0.875rem;
    padding: 0.25rem 0.5rem;
    border: 1px solid #e0e0e0;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .tag:hover {
    background: #f0f0f0;
    border-color: #0066cc;
  }

  .prose {
    font-size: 1.125rem;
    line-height: 1.75;
    color: #333;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
    
    .prose {
      font-size: 1rem;
    }
  }
</style>